---
import type { FooterProps } from "./types"

import mapAttributes from "../../../utilities/mapAttributes"

const {
	as: Element = "footer",
	id = "footer",
	role = "contentinfo",
	...attrs
} = Astro.props as FooterProps

const attributes = mapAttributes(attrs, ["footer"])
---

<Element
	{...attributes}
	{id}
	{role}
>
	<slot name="microdata" />
	<slot />
</Element>
