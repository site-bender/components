---
import type { MainProps } from "./types"

import mapAttributes from "../../../utilities/mapAttributes"

const {
	as: Element = "main",
	id = "main-content",
	role = "main",
	...attrs
} = Astro.props as MainProps

const attributes = mapAttributes(attrs, ["main"])
---

<Element
	{...attributes}
	{id}
	{role}
>
	<slot name="microdata" />
	<slot />
</Element>
